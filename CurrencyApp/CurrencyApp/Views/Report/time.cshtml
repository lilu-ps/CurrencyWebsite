@model CurrencyApp.Models.TimeInterval
@{
    ViewData["Title"] = "time";
}

<p>
    <a asp-action="back">Go Back</a>
</p>

<form asp-controller="Report" asp-action="time" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="from" class="col-sm-2 col-form-label">Search From</label>
        <div class="col-sm-10">
            <input asp-for="from" class="form-control" placeholder="Buy Rate">
            <span asp-validation-for="from" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="to" class="col-sm-2 col-form-label">Search To</label>
        <div class="col-sm-10">
            <input asp-for="to" class="form-control" placeholder="Sell Rate">
            <span asp-validation-for="to" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>
