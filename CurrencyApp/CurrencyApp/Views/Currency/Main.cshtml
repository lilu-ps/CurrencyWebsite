@model CurrencyApp.Models.CurrencyModel


      
        <div class="form-group row">
            <label asp-for="Currency" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Currency" class="form-control" placeholder="Currency">
                <span asp-validation-for="Currency" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="BuyRate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="BuyRate" class="form-control" placeholder="Buy Rate">
                <span asp-validation-for="BuyRate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="SellRate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="SellRate" class="form-control" placeholder="Sell Rate">
                <span asp-validation-for="SellRate" class="text-danger"></span>
            </div>
        </div>




        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
