@model CurrencyApp.Models.CurrencyModel


    <form asp-controller="CurrencyModel" asp-action="edit" method="post" class="mt-3">
      
        <div class="form-group row">
            <label asp-for="fromCurrency" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="fromCurrency" class="form-control" placeholder="Name">
                <span asp-validation-for="fromCurrency" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="toCurrency" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="toCurrency" class="form-control" placeholder="Email">
                <span asp-validation-for="toCurrency" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Rate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Rate" class="form-control" placeholder="Email">
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
        </div>




        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </div>
    </form>