@model CurrencyApp.Models.CalculatorModel
    <head>
        <link href="~/css/Styles.css" rel="stylesheet" type="text/css" />
    </head>    

<div class="main">

    <div class="form-group-row">
        <div class="lable">
            <label asp-for="fromCurrency" class="col-sm-2 col-form-label">From</label>
        </div>
        <div class="col-sm-10">

            @Html.DropDownListFor(model => model.fromCurrency, ViewBag.operations as SelectList, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.fromCurrency, "", new { @class = "text-danger" })
        </div>
    </div>
        <div class="form-group-row">
            <div class="lable">
                <label asp-for="toCurrency" class="col-sm-2 col-form-label">To</label>

            </div>
            <div class="col-sm-10">


                @Html.DropDownListFor(model => model.toCurrency, ViewBag.operations as SelectList, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.toCurrency, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group-row">
            <div class="lable">
                <label asp-for="Rate" class="col-sm-2 col-form-label">Rate</label>
            </div>
            <div class="col-sm-10">
                <input asp-for="Rate" class="form-control" placeholder="Rate">
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group-row">
            <div class="lable">
                <label asp-for="sell" class="col-sm-2 col-form-label">Sell</label>
            </div>
            <div class="col-sm-10">
                <input asp-for="sell" class="form-control" placeholder="Email">
                <span asp-validation-for="sell" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group-row">
            <div class="lable">
                <label asp-for="buy" class="col-sm-2 col-form-label">Buy</label>
            </div>
            <div class="col-sm-10">
                <input asp-for="buy" class="form-control" placeholder="Email">
                <span asp-validation-for="buy" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group-row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Convert</button>
            </div>
        </div>

    </div>
